---
import { Button } from '@org/components';
import '@org/components/styles';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Contact page" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Contact - Astro</title>
	</head>
	<body>
		<main style="padding: 2rem; max-width: 1200px; margin: 0 auto;">
			<h1 style="font-size: 2.5rem; font-weight: bold; marginBottom: '2rem'">
				Contact Us
			</h1>
			
			<p style="margin-bottom: 2rem; color: #666;">
				Get in touch with us through this Astro-powered contact page.
			</p>

			<div style="margin-bottom: 2rem;">
				<a href="/">
					<Button variant="outline">‚Üê Back to Home</Button>
				</a>
			</div>

			<div style="display: flex; gap: 1rem; flex-wrap: wrap;">
				<Button variant="default">Send Email</Button>
				<Button variant="secondary">Call Us</Button>
				<Button variant="outline">Visit Office</Button>
			</div>
		</main>
	</body>
</html>
